{% extends 'base.html.twig' %}

{% block title %}Restaurant{% endblock %}

{% block body %}
    <h1>Restaurant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ restaurant.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ restaurant.Name }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ restaurant.Logo }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ restaurant.Address }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN')  %}
    <a href="{{ path('admin_restaurants') }}">back to list</a>

    {% endif %}

    {% if is_granted('ROLE_ADMIN')  %}
        <a href="{{ path('admin_restaurant_edit', {'id': restaurant.id}) }}">edit</a>
          {{ include('restaurant/_delete_form.html.twig') }}
    {% else %}
        <a href="{{ path('restaurant_edit', {'id': restaurant.id}) }}">edit</a>
    {% endif %}

  
    
{% endblock %}
