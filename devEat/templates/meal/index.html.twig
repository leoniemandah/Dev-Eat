{% extends 'base.html.twig' %}

{% block title %}Tous vos plats
{% endblock %}

{% block body %}
	<h1 class="text-center mt-5 mb-5">Tous vos plats</h1>

	<div style="display: flex;justify-content:space-evenly;flex-wrap: wrap;">
		{% for meal in meals %}

			<div class="card mb-5" style="width: 24rem; border: none;">
				<img src="{{ asset('uploads/' ~ meal.picture) }}" class="card-img-top" alt="">
				<div class="card-body">
					<center>
						<h5>{{ meal.name }}
							{{meal.Price}}
							€</h5>
						<a class="btn mb-3 mt-3" style="background-color: #585455;color: white;" href="{{ path('meal_show', {'id': meal.id}) }}">Voir le plat</a>
						<a class="btn mb-3 mt-3" style="background-color: #585455;color: white;" href="{{ path('meal_edit', {'id': meal.id}) }}">Modifier le plat</a>
						{{ include('meal/_delete_form.html.twig') }}
					</center>
				</div>
			</div>
			<br/>
		{% else %}
			<p>Il n'y a aucun plat proposé pour le moment</p>
		{% endfor %}
	</div>


	<div style="display: flex;flex-direction: column;align-items: center;">
		<a class="btn mb-3 mt-3" style="background-color: #585455;color: white;" href="{{ path('crud_restaurant_show',{'id': restaurant.id}) }}">Retour à la liste</a>
		<a class="btn mb-3 mt-3" style="background-color: #585455;color: white;" href="{{ path('meal_new', {'id': restaurant.id}) }}">Ajouter un plat</a>
	</div>
{% endblock %}
