{% if is_granted('ROLE_ADMIN')  %}
	<form method="post" action="{{ path('admin_meal_delete', {'id': meal.id}) }}" onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer ce plat ?');">
		<input type="hidden" name="_method" value="DELETE">
		<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ meal.id) }}">
		<button class="btn">Supprimer le plat</button>
	</form>

{% else %}
	<form method="post" action="{{ path('meal_delete', {'id': meal.id}) }}" onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer ce plat ?');">
		<input type="hidden" name="_method" value="DELETE">
		<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ meal.id) }}">
		<button class="btn">Supprimer le plat</button>
	</form>
{% endif %}
