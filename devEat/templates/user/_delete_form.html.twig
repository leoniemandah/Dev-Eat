{% if is_granted('ROLE_ADMIN')  %}
	<form method="post" action="{{ path('admin_user_delete', {'user': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
		<input type="hidden" name="_method" value="DELETE">
		<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
		<button class="btn">Supprimer le client</button>
	</form>

{% else %}
	<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
		<input type="hidden" name="_method" value="DELETE">
		<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
		<div>
			<button class="btn">Supprimer le profil</button>
		</div>
	</form>
{% endif %}
