{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ user.FirstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ user.LastName }}</td>
            </tr>
            <tr>
                <th>Solde</th>
                <td>{{ user.solde }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ user.Address }}</td>
            </tr>
        </tbody>
    </table>
                {% if is_granted('ROLE_ADMIN')  %}
                    <a href="{{ path('admin_users') }}">back to list</a>
                    <a href="{{ path('admin_user_edit', {'user': user.id}) }}">edit</a>
                {% else %}
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                {% endif %}


    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
