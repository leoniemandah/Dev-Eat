{% extends 'base.html.twig' %}

{% block title %}Restaurants!
{% endblock %}

{% block body %}
	<center>
		<h1>Découvrez nos restaurants</h1>
	</center>

	{% for restaurant in restaurants %}

		<div class="contain">


			<div class="card" style="width: 18rem;">
				<a href="#"><img src="{{ restaurant.logo }}" class="card-img-top" alt="..."></a>
				<div class="card-body">
					<h5 class="card-title">{{ restaurant.name }}
						({{restaurant.address}}
						)</h5>
					<p class="card-text">Les frais de livraison: 2£ . 10-20min</p>

				</div>
			</div>
		</div>
		<br/>

	{% endfor %}

{% endblock %}
